<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- 생성자를 이용한 의존성 주입 -->

	<!-- Service svc1 = new ServiceImp("홍길동") -->

	<bean id="svc1" class="part02.ServiceImp">
		<!-- <constructor-arg> <value>홍길동</value> </constructor-arg> -->
		<constructor-arg value="홍길동" />
	</bean>

	<!-- Service svc2 = new ServiceImp("여진구",30) -->
	<bean id="svc2" class="part02.ServiceImp">
		<!--  
		<constructor-arg>
			<value>여진구</value>
		</constructor-arg>
		<constructor-arg>
			<value>30</value>
		</constructor-arg>
		-->
		<!--타입은 정확하게 하고싶으묜 쓰기 -->
		<constructor-arg value="여진구" type="java.lang.String"/>
		<constructor-arg value="30" type="int" />
		
	</bean>
	
	<!-- 
	Random ran = new Random();
	ServiceImp svc3 = new ServiceImp(ran);
	 -->
	 
	 <bean id="ran" class="java.util.Random" />
	 <bean id="svc3" class="part02.ServiceImp">
	 	<!--  <constructor-arg>
		<ref bean="ran" />
		</constructor-arg>
		-->
		<constructor-arg ref="ran" />
	 </bean>
</beans>
