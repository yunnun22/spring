<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 프로퍼티를 이용한 의존성 주입 -->
	<!-- ServiceImp svc1 = new ServiceImp(); svc1.setName("홍길동") -->
	
	<bean id="svc" class="part04_property.ServiceImp">
	<!--
		<property name="name">
			<value>홍길동</value>
		</property>
		-->
		
		<property name="name" value="홍길동" />
	</bean>
	
	
	<!-- 
	 Random ran = new Random();
	 ServiceImp svc2 = new ServiceImp();
	 svc2.setRan(ran);
	 -->
	 <bean id="ran" class="java.util.Random" />
	 <bean id="svc2" class="part04_property.ServiceImp">
	<!--
	 <property name="ran">
	 <ref bean="ran"/>
	 </property>
	  -->
	 <property name="ran" ref="ran" />
	 </bean>
<!-- p:프로퍼티 = "값" -->
<bean id="svc3" class="part04_property.ServiceImp" p:name="홍길동" />

<!-- p:프로퍼티-ref="빈 id속성" -->
<bean id="svc4" class="part04_property.ServiceImp" p:ran-ref="ran" ></bean>
</beans>
